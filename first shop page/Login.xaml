<Window x:Class="first_shop_page.Window1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:first_shop_page"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="800">

    <Grid>
        <Label Content="Введите логин" HorizontalAlignment="Left" Margin="306,141,0,0" VerticalAlignment="Top" Width="99"/>
        <TextBox x:Name="Textlogin" HorizontalAlignment="Left" Height="23" Margin="306,172,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="189" />
        <Label Content="Введите пароль" HorizontalAlignment="Left" Margin="306,196,0,0" VerticalAlignment="Top" Width="99"/>
        <PasswordBox x:Name="password"  HorizontalAlignment="Left" Height="23" Margin="306,227,0,0" VerticalAlignment="Top" Width="189"/>
        <Button x:Name="enter" Content="Войти" HorizontalAlignment="Left" Margin="306,257,0,0" VerticalAlignment="Top" Width="71"/>
        <Button x:Name="regin" Content="Регистрация" HorizontalAlignment="Left" Margin="394,257,0,0" VerticalAlignment="Top" Width="101"/>
    </Grid>
</Window>
